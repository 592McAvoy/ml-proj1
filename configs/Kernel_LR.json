{
    "name": "KernelLR",
    "n_gpu": 1,
    "target_cls":-1,
    "arch": {
        "type": "KernelLogisticRegression",
        "args": {
            "kernel":"rbf",
            "lamb":0.1,
            "reg":"lasso"
        }
    },
    "train_loader": {
        "type": "SVHNLoader",
        "args":{
            "gray": true,
            "mode":"train",
            "batch_size": 1024,
            "shuffle": true,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "recall"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer_module":{
        "type": "Trainer_KernelLR",
        "args": {}
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
